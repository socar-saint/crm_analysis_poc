# CRM Campaign Analysis System - Environment Configuration
# by saintwo

# =============================================================================
# Azure OpenAI Configuration
# =============================================================================

# Your Azure OpenAI API Key
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here

# Your Azure OpenAI Endpoint URL
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/

# Azure OpenAI API Version
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Your Azure OpenAI Deployment Name
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name

# =============================================================================
# System Configuration
# =============================================================================

# Enable debug mode for detailed logging
DEBUG=false

# Maximum number of concurrent agents
MAX_CONCURRENT_AGENTS=3

# Enable parallel processing
ENABLE_PARALLEL_EXECUTION=true

# Maximum sample size for LLM analysis
MAX_SAMPLE_SIZE=1000

# =============================================================================
# Analysis Parameters
# =============================================================================

# Statistical significance threshold for lift analysis
LIFT_SIGNIFICANCE_THRESHOLD=0.05

# Minimum sample size for statistical analysis
MIN_SAMPLE_SIZE=30

# Confidence interval for metrics
CONFIDENCE_INTERVAL=0.95

# =============================================================================
# Performance Settings
# =============================================================================

# Enable result caching
CACHE_RESULTS=true

# Data processing chunk size
CHUNK_SIZE=100

# Timeout for agent execution (seconds)
AGENT_TIMEOUT=300

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/analysis.log

# Enable console logging
CONSOLE_LOGGING=true

# =============================================================================
# Optional: Alternative LLM Providers
# =============================================================================

# OpenAI (if using OpenAI directly)
# OPENAI_API_KEY=your-openai-api-key-here

# Anthropic Claude
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

# =============================================================================
# Development Settings
# =============================================================================

# Enable development mode
DEV_MODE=false

# Skip expensive operations in development
SKIP_EXPENSIVE_OPERATIONS=false

# Enable profiling
ENABLE_PROFILING=false
